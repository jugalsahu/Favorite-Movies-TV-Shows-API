{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": "src",
		"moduleResolution": "node",
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}